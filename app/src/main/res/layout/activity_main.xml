<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.playlists.adapter.PlaylistsActivity">


    <ImageView
        android:id="@+id/nointcon"
        android:layout_width="227dp"
        android:layout_height="227dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/noconnection"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/txt_nic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nointcon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/no_internet_connection"
        android:layout_marginHorizontal="108dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tryagain"
        app:layout_constraintBottom_toTopOf="@+id/txt_nic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:text="@string/try_again"
        android:background="@color/white"
      />








</androidx.constraintlayout.widget.ConstraintLayout>